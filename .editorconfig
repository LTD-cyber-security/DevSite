# https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{json,yml}]
indent_size = 2

[*.html]
indent_size = 2

[*.js]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.php]
indent_size = 2

[*.py]
indent_size = 2

[*.rb]
indent_size = 2

[*.java]
indent_size = 2

[*.go]
indent_size = 2

[*.ts]
indent_size = 2
